{
  "name": "i18n-boost",
  "displayName": "i18n Boost",
  "publisher": "mrgwd",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "src/images/icon.webp",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "description": "Streamline your i18n workflow â€” works with your favorite library.",
  "categories": [
    "Other"
  ],
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "json",
    "typescript",
    "javascript"
  ],
  "activationEvents": [
    "onCommand:i18nBoost.selectLocale",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "i18nBoost.copyFullKey",
        "title": "I18n Boost: Copy translation key"
      },
      {
        "command": "i18nBoost.createConfig",
        "title": "I18n Boost: Create config file"
      },
      {
        "command": "i18nBoost.showLocales",
        "title": "I18n Boost: Show available locales"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "i18nBoost.copyFullKey",
          "when": "editorTextFocus && editorLangId == 'json'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "i18nBoost.createConfig",
          "when": "explorerResourceIsFolder",
          "group": "7_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "i18n-boost",
      "properties": {
        "i18nBoost.localesPath": {
          "type": "string",
          "default": "src/i18n",
          "description": "Path to the folder that contains locale files. Can be relative to workspace root. (Note: This setting is overridden by i18nBoost.config.ts if present)"
        },
        "i18nBoost.functionNames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "t",
            "translate"
          ],
          "description": "Function names to consider for completion/navigation. (Note: This setting is overridden by i18nBoost.config.ts if present)"
        },
        "i18nBoost.defaultLocale": {
          "type": "string",
          "default": "en",
          "description": "Default locale file name (without extension). (Note: This setting is overridden by i18nBoost.config.ts if present)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "test:coverage": "nyc npm test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "package": "vsce package",
    "publish:patch": "npm version patch && git push --follow-tags",
    "publish:minor": "npm version minor && git push --follow-tags",
    "publish:major": "npm version major && git push --follow-tags"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "audit-ci": "^6.0.0",
    "eslint": "^8.0.0",
    "mocha": "^11.7.1",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "jsonc-parser": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrgwd/i18n-boost.git"
  },
  "bugs": {
    "url": "https://github.com/mrgwd/i18n-boost/issues"
  },
  "homepage": "https://github.com/mrgwd/i18n-boost#readme"
}
